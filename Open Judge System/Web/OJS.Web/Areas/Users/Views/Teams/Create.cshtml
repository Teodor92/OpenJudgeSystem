@model OJS.Web.Areas.Users.InputModels.Teams.TeamInputModel

@{
    ViewBag.Title = "Създаване на отбор";
}

<h2>@ViewBag.Title</h2>

<div id="create-form" class="container">
    @using (Html.BeginForm("Create", "Teams", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <fieldset>
            <legend>Основна информация</legend>
            <div class="row bottom-buffer">
                <div class="editor-label col-xs-3">
                    <div class="pull-right">
                        @Html.LabelFor(m => m.Name)
                    </div>
                </div>
                <div class="editor-field col-xs-4">
                    @Html.EditorFor(x => x.Name)
                </div>
                <div class="editor-field col-xs-4">
                    <span class="glyphicon glyphicon-question-sign text-primary" title="Изберете име за отбора" data-tooltip="true"></span>
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>
            <div class="row">
                <div class="editor-label col-xs-3">
                    <div class="pull-right">
                        @Html.LabelFor(m => m.Members)
                    </div>
                </div>
                <div class="editor-field col-xs-4">
                    @(Html.Kendo().MultiSelectFor(x => x.Members)
                        .Name("Members")
                        .DataValueField("Id")
                        .DataTextField("UserName")
                        .Filter("contains")
                        .Placeholder("Изберете...")
                        .HtmlAttributes(new { style = "width: 100%;" })
                        .BindTo(Model.ActiveUsers))
                </div>
                <div class="editor-field col-xs-4">
                    <span class="glyphicon glyphicon-question-sign text-primary" title="Изберете участници в отбора" data-tooltip="true"></span>
                    @Html.ValidationMessageFor(m => m.Members)
                </div>
            </div>
        </fieldset>
        <hr />
        <div class="row">
            <div class="editor-label col-xs-3">
                <button type="submit" class="btn btn-primary pull-right">Създай</button>
            </div>
            <div class="editor-label col-xs-4">
                <a href="/Users/Teams/" class="btn btn-primary">Назад</a>
            </div>
        </div>
    }
</div>