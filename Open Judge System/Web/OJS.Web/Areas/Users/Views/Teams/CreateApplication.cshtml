@model OJS.Web.Areas.Users.InputModels.Teams.TeamApplicationInputModel

@{
    ViewBag.Title = "Заявка за включване в отбор";
}

<h2>@ViewBag.Title</h2>

<div id="create-form" class="container">
    @using (Html.BeginForm("Create", "Contests", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <fieldset>
            <legend>Основна информация</legend>
            <div class="row">
                <div class="editor-label col-xs-3">
                    <div class="pull-right">
                        @Html.LabelFor(m => m.TeamId)
                    </div>
                </div>
                <div class="editor-field col-xs-4">
                    @(Html.Kendo()
                    .DropDownListFor(m => m.TeamId)
                    .OptionLabel("Моля изберете...")
                    .DataTextField("Name")
                    .DataValueField("Id")
                    .BindTo(Model.TeamsDropdDownData).HtmlAttributes(new { @class = "form-control pull-left full-editor" }))
                </div>
                <div class="editor-field col-xs-4">
                    <span class="glyphicon glyphicon-question-sign text-primary" title="Изберете отбор" data-tooltip="true"></span>
                    @Html.ValidationMessageFor(m => m.TeamId)
                </div>
            </div>

        </fieldset>
        <hr />
        <div class="row">
            <div class="editor-label col-xs-3">
                <button type="submit" class="btn btn-primary pull-right">Създай</button>
            </div>
            <div class="editor-label col-xs-4">
                <a href="/Users/Teams/" class="btn btn-primary">Назад</a>
            </div>
        </div>
    }
</div>